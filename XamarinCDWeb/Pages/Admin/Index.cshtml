@page
@model XamarinCDWeb.Pages.Admin.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.MobileApp[0].Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MobileApp[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MobileApp[0].ApkVersion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MobileApp[0].IpaVersion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MobileApp[0].IpaId)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.MobileApp)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id.ToString("N"))
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ApkVersion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IpaVersion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IpaId)
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
